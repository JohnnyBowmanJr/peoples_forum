<div class="suggestion-form">
  <%= form_for(@suggestion) do |f| %>
   
    <div class="field">
      <%= f.label :title, "Suggestion Title"  %><br />
      <%= f.text_field :title %>
    </div> <br />

    <div class="field">
      <%= f.label :body, "Description"  %><br />
      <%= f.text_area :body %>
    </div>
    
    <%= f.submit %>
  
  <% end %>
</div>
