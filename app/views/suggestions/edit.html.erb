<h1>Editing suggestion</h1>

  <%= form_for(@suggestion) do |f| %>
   
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div> 

    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>

     <div class="field">
      <%= f.label :user_id %><br />
      <%= f.text_field :user_id %>
    </div>


    
    <%= f.submit %>
  
  <% end %>

<%= link_to 'Show', @suggestion %> |
<%= link_to 'Back', suggestions_path %>
